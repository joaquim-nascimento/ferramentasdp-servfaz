<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <%- include('./layouts/head') %>
  <title>Login</title>
  <style>
    .add-card {
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      max-width: 800px;
      margin: 0 auto;
    }
    .form-header {
      border-bottom: 1px solid #dee2e6;
      padding-bottom: 1rem;
      margin-bottom: 1.5rem;
    }
    .form-section {
      background-color: #f8f9fa;
      border-radius: 8px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }
    .section-title {
      color: #0d6efd;
      font-weight: 500;
      margin-bottom: 1rem;
    }
    .input-icon {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }
  </style>
</head>
<body class="bg-light">
  <%- include('./layouts/header') %>

  <main class="container py-4">
    <div class="card add-card">
      <div class="card-body">
        <div class="form-header">
          <h1 class="h4 fw-bold text-primary mb-0">
            <i class="bi bi-person-plus-fill me-2"></i>Login
          </h1>
        </div>

        <% if (error) { %>
          <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> <%= error %>
          </div>
        <% } %>

        <form method="POST" action="/auth/login">
          <div class="form-section">
            <h2 class="section-title h5">
              <i class="bi bi-person-badge me-2"></i>Credenciais
            </h2>
            
            <div class="row g-3">
              <div class="col-md-12">
                <label for="name" class="form-label">Nome de Usu√°rio <span class="text-danger">*</span></label>
                <div class="input-group">
                  <span class="input-group-text input-icon">
                    <i class="bi bi-person"></i>
                  </span>
                  <input type="text" id="name" name="name" class="form-control" required>
                </div>
              </div>
              
              <div class="col-md-12">
                <label for="registration" class="form-label">Senha <span class="text-danger">*</span></label>
                <div class="input-group">
                  <span class="input-group-text input-icon">
                    <i class="bi bi-card-heading"></i>
                  </span>
                  <input type="password" id="password" name="password" class="form-control" required>
                </div>
              </div>
            </div>

          <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success">
              <i class="bi bi-check me-1"></i> Entrar
            </button>
          </div>
        </form>

      </div>
    </div>
  </main>

  <%- include('./layouts/footer') %>
</body>
</html>