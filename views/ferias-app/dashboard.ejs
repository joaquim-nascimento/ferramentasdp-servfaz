<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <%- include('../layouts/head') %>
  <title>Gestão de Férias</title>
  <style>
    .dashboard-card {
      transition: transform 0.3s;
      border-radius: 10px;
      border: none;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .dashboard-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }
    .card-value {
      font-size: 2.5rem;
      font-weight: bold;
      color: #0d6efd;
    }
    .card-icon {
      font-size: 2rem;
      margin-bottom: 1rem;
      color: #0d6efd;
    }
  </style>
</head>
<body class="bg-light">
  <%- include('../layouts/header') %>

  <main class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
      <h1 class="display-5 fw-bold">Dashboard</h1>
      <div class="actions">
        <a href="/employees/import" class="btn btn-primary me-2">
          <i class="bi bi-upload me-1"></i> Importar Funcionários
        </a>
        <a href="/vacations/distribute" class="btn btn-success">
          <i class="bi bi-calendar-plus me-1"></i> Distribuir Férias
        </a>
      </div>
    </div>
    
    <div class="row g-4 mb-5">
      <div class="col-md-6">
        <div class="card dashboard-card h-100">
          <div class="card-body text-center p-4">
            <div class="card-icon">
              <i class="bi bi-people-fill"></i>
            </div>
            <h2 class="card-title h4">Funcionários</h2>
            <p class="card-value"><%= employeeCount %></p>
            <a href="/employees" class="btn btn-outline-primary">
              <i class="bi bi-gear me-1"></i> Gerenciar
            </a>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="card dashboard-card h-100">
          <div class="card-body text-center p-4">
            <div class="card-icon">
              <i class="bi bi-calendar-check-fill"></i>
            </div>
            <h2 class="card-title h4">Férias Agendadas</h2>
            <p class="card-value"><%= vacationCount %></p>
            <a href="/vacations" class="btn btn-outline-primary">
              <i class="bi bi-gear me-1"></i> Gerenciar
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../layouts/footer') %>
</body>
</html>