<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../layouts/head') %>
    <title>Extrator de Dados FGTS</title>
</head>
<body class="bg-light">
    <%- include('../layouts/header') %>

    <div class="container py-5">
        <h1 class="mb-4 text-center">Extrator de Dados FGTS</h1>

        <% if (messages.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= messages.error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <form method="POST" action="/fgts"  enctype="multipart/form-data" class="border p-4 bg-white rounded shadow-sm">
            <div class="mb-3">
                <label for="txt_files" class="form-label">Arquivos TXT com os dados FGTS:</label>
                <input class="form-control" type="file" id="txt_files" name="txt_files" accept=".txt" multiple required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Processar e Baixar</button>
        </form>
    </div>
            
    <%- include('../layouts/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>